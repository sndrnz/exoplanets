// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum PlanetTypeName {
  GasGiant
  Terrestrial
  SuperEarth
  Neptunian
}

model PlanetType {
  id          PlanetTypeName @id
  displayName String
  description String         @db.Text
  slug        String         @unique

  planets Planet[]
}

model Planet {
  id               Int                 @id @default(autoincrement())
  name             String
  description      String
  image            String
  imagePlaceholder String?             @db.VarChar(255)
  source           String              @db.Text
  slug             String              @unique
  typeId           PlanetTypeName
  methodId         DetectionMethodName

  type       PlanetType      @relation(fields: [typeId], references: [id])
  attributes Attribute[]
  method     DetectionMethod @relation(fields: [methodId], references: [id])

  @@index([typeId])
  @@index([methodId])
}

enum UnitName {
  LightYears
  EarthMasses
  EarthRadii
  JupiterMasses
  JupiterRadii
  Year
}

model Unit {
  id          UnitName @id
  displayName String
  suffix      String?
  explanation String?  @db.Text

  attributes Attribute[]
}

enum AttributeName {
  Discovery
  Mass
  Radius
  Distance
}

model AttributeType {
  id          AttributeName @id
  displayName String
  explanation String?       @db.Text

  attributes Attribute[]
}

model Attribute {
  value    String
  typeId   AttributeName
  unitId   UnitName
  planetId Int

  planet Planet        @relation(fields: [planetId], references: [id])
  type   AttributeType @relation(fields: [typeId], references: [id])
  unit   Unit          @relation(fields: [unitId], references: [id])

  @@id([planetId, typeId, unitId])
  @@index([planetId])
  @@index([typeId])
  @@index([unitId])
}

enum DetectionMethodName {
  Transit
  RadialVelocity
  Imaging
  OrbitalBrightnessModulation
  PulsarTiming
}

model DetectionMethod {
  id          DetectionMethodName @id
  displayName String
  description String              @db.Text
  slug        String              @unique

  planets Planet[]
}
